{
    "compilerOptions": {
        "target": "ESNext",
        "outDir": "js",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true
    },
    "include": ["ts/**/*.ts"]
}